<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1>Edit Comment</h1>
		<a href="/campgrounds">Go Back</a>

		<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%=comment.text%>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-default">Submit</button>
			</div> 
		</form>		
	</div>
</div>

